import numpy as np

def calculateControlPoints(xSamples, ySamples):
    # reshapes arrays vertically
    xSamples = xSamples.reshape(-1, 1)
    ySamples = ySamples.reshape(-1, 1)

    # creates coefficients array
    coefficents = np.array([[6, 0, 0, 0], [-5, 18, -9, 2], [2, -9, 18, -5], [0, 0, 0, 6]])

    # calculates control points
    xCtrl = coefficents @ xSamples / 6
    yCtrl = coefficents @ ySamples / 6

    # flattens arrays to horizontal

    xCtrl = xCtrl.reshape(1, -1)
    yCtrl = yCtrl.reshape(1, -1)

    return xCtrl, yCtrl